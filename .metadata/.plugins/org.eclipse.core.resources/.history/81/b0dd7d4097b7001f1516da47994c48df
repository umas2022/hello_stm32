#ifndef __FLASH_H
#define __FLASH_H

#include "stm32f1xx_hal.h"

// 定义用户Flash存储区起始地址
#define FLASH_USER_START_ADDR   0x0800FC00   // 最后一页的起始地址
#define FLASH_PAGE_SIZE         1024         // 根据您的MCU型号调整页面大小

// 函数声明
HAL_StatusTypeDef Flash_Write_String(uint32_t Address, const char *str);
char* Flash_Read_String(uint32_t Address, char *buffer, uint32_t buffer_size);
HAL_StatusTypeDef Flash_Init(void);

#endif /* __FLASH_H */
