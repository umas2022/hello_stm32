#ifndef TMC2209_H
#define TMC2209_H

#include <stdint.h>

// Datagrams
typedef union WriteReadReplyDatagram {
    struct {
        uint8_t sync;
        uint8_t serial_address;
        uint8_t register_address;
        uint8_t rw; // 读写标志
        uint32_t data;
        uint8_t crc;
    } fields;
    uint8_t bytes[WRITE_READ_REPLY_DATAGRAM_SIZE];
} WriteReadReplyDatagram;

void write(uint8_t register_address, uint32_t data);

#endif
